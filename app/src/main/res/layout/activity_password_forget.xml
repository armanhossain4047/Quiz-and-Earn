<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/singup_bacgroun_vector"
    android:padding="40dp"
    tools:context=".PasswordForget">

    <!-- Icon -->
    <View
        android:id="@+id/forgot_icon"
        android:layout_width="132dp"
        android:layout_height="122dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_page_icon" />

    <!-- Title -->
    <TextView
        android:id="@+id/forgot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Reset Password"
        android:textColor="@color/purple"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Email Input -->
    <RelativeLayout
        android:id="@+id/email_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgot_title"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_border_vector"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <View
            android:id="@+id/email_icon"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/email_vector" />

        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_toEndOf="@id/email_icon"
            android:layout_marginStart="12dp"
            android:backgroundTint="@android:color/transparent"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>

    <!-- Old Password -->
    <RelativeLayout
        android:id="@+id/oldpasswordbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_box"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_border_vector"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <View
            android:id="@+id/lock_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/password_icon_vector" />

        <EditText
            android:id="@+id/old_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_toEndOf="@id/lock_icon"
            android:layout_marginStart="12dp"
            android:backgroundTint="@android:color/transparent"
            android:hint="Enter old password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>

    <!-- New Password -->
    <RelativeLayout
        android:id="@+id/newpasswordbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/oldpasswordbox"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_border_vector"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <View
            android:id="@+id/lock_icon_id"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/password_icon_vector" />

        <EditText
            android:id="@+id/new_password_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_toEndOf="@id/lock_icon_id"
            android:layout_marginStart="12dp"
            android:backgroundTint="@android:color/transparent"
            android:hint="Enter new password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>

    <!-- Confirm Password -->
    <RelativeLayout
        android:id="@+id/confirmpasswordbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newpasswordbox"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_border_vector"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <View
            android:id="@+id/lock_icon_confirm"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@drawable/password_icon_vector" />

        <EditText
            android:id="@+id/confirm_password_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_toEndOf="@id/lock_icon_confirm"
            android:layout_marginStart="12dp"
            android:backgroundTint="@android:color/transparent"
            android:hint="Confirm new password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="#757575"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>

    <!-- Reset Button -->
    <Button
        android:id="@+id/reset_password_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmpasswordbox"
        android:layout_marginTop="30dp"
        android:text="Reset Password"
        android:backgroundTint="@color/purple"
        android:textColor="@android:color/white" />
</RelativeLayout>
